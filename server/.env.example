# PostgreSQL connection string (required for profile, meetings, settings, analytics)
# Without this, the API returns 503 for /api/user/profile and other DB routes.
DATABASE_URL=postgresql://user:password@localhost:5432/voxa

# OpenAI TTS (required for text-to-speech)
OPENAI_API_KEY=sk-...

# Supabase JWT verification (use same project as frontend)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=eyJ...

# Optional
PORT=4000
VITE_FRONTEND_URL=http://localhost:3000
DB_CONNECTION_TIMEOUT_MS=30000
